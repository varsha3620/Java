import java.util.Scanner;
public class Sum{
        public static void main(String[] args){
                System.out.print("Enter the number:");
                Scanner s=new Scanner(System.in);
                int n=s.nextInt();
                int r=0;
                for(int i=0;i<=n;i++){
                        r=r+i;
                }
                System.out.println("Sum="+r);
                }
        }
